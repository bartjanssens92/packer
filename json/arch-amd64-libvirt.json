{
  "builders": [{
    "type": "qemu",
    "accelerator": "kvm",
    "headless": true,

    "iso_url": "http://archlinux.mirror.kangaroot.net/iso/2019.12.01/archlinux-2019.12.01-x86_64.iso",
    "iso_checksum": "bcee2d045f939729e3a90f65262e7367",
    "iso_checksum_type": "md5",

    "boot_command": [
      "<tab> script=http://{{ .HTTPIP }}:{{ .HTTPPort }}/arch/pre-install.sh<enter>"
    ],
    "boot_wait": "5s",
    "qemuargs": [
      ["-D","/tmp/crap.log"],
      ["-d","guest_errors"]
    ],

    "disk_interface": "virtio-scsi",

    "http_directory": "http",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "3600s",
    "ssh_pty" : "true",

    "disk_size": 10240,
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
  }],

  "post-processors": [{
    "output": "build/arch-amd64-{{.Provider}}.box",
    "type": "vagrant"
  }],

  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
    "scripts": [
      "scripts/arch/install_short-libvirt.sh"
    ]
  }]
}
